include ~/.config/taskwarrior/theme

alias.snooze = modify snooze:1h

context.couple = +drewer
context.dazzlebyte = project:dzb
context.lbz = project:lbz
context.solo = -drewer project:

data.location = ~/.task

default.command = default

report.default.columns = urgency,id,jira,description,name,email,phone,company,tags,due.relative,start.age,depends,priority,project,recur,scheduled.countdown,until.remaining,entry.age
report.default.description = Most urgent tasks
report.default.filter = status:pending limit:page urgency.over:0
report.default.labels = Urg,ID,Jira,Description,Name,Email,Phone,Company,Tags,Due,Active,Deps,P,Project,Recur,S,Until,Age
report.default.sort = urgency-

report.next.columns = urgency,id,description,name,email,phone,company,tags,due.relative,start.age,depends,priority,project,recur,scheduled.countdown,until.remaining,entry.age
report.next.description = Most urgent tasks
report.next.filter = status:pending limit:page
report.next.labels = Urg,ID,Description,Name,Email,Phone,Company,Tags,Due,Active,Deps,P,Project,Recur,S,Until,Age
report.next.sort = urgency-

report._reviewed.columns = uuid
report._reviewed.description = Tasksh review report.  Adjust the filter to your needs.
report._reviewed.filter = ( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING ) and ( -treat or -mediaList )
report._reviewed.sort = reviewed+,modified+

report.simple.columns = uuid
report.simple.description = Simple list of open tasks by project
report.simple.filter = status:pending limit:1
report.simple.sort = project+\/,entry+

uda.company.label = Company
uda.company.type = string
uda.email.label = Email
uda.email.type = string
uda.host.label = Host
uda.host.type = string
uda.jira.label = Jira
uda.jira.type = string
uda.name.label = Name
uda.name.type = string
uda.phone.label = Phone
uda.phone.type = string
uda.reviewed.label = Reviewed
uda.reviewed.type = date
uda.snooze.label = Snooze
uda.snooze.type = date
uda.url.label = Url
uda.url.type = string

urgency.age.coefficient = 10
urgency.due.coefficient = 10
urgency.tags.coefficient = 0
urgency.user.tag.fuck.coefficient = 100
urgency.user.tag.health.coefficient = 2
urgency.user.tag.mediaList.coefficient = -5
urgency.user.tag.money.coefficient = 3
urgency.user.tag.next.coefficient = 25
urgency.user.tag.shopping.coefficient = -5
urgency.user.tag.then.coefficient = 15
urgency.user.tag.treat.coefficient = -5
