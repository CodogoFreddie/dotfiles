alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'
alias cats='highlight -O ansi'

alias vim="nvim"

alias '..'='cd ..'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'

alias treee="tree --dirsfirst -C"

alias node="nodejs"

alias control-center="env XDG_CURRENT_DESKTOP=GNOME gnome-control-center"
alias settings-daemon="env XDG_CURRENT_DESKTOP=GNOME gnome-settings-daemon"

alias ls="ls --color"
alias less="less -R"
alias exa="exa --git --extended --header --time-style=long-iso"
