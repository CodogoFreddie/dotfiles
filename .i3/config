#  _ _____
# (_)___ /
# | | |_ \
# | |___) |
# |_|____/
#
# my conf. based on i3-config-generator
set $mod Mod1

gaps inner 16
gaps outer 1
smart_gaps on
smart_borders no_gaps

set $BACKGROUND #2c292d
set $WHITE #fdf9f3
set $RED #ff6188
set $ORANGE #fc9867
set $YELLOW #ffd866
set $GREEN #a9dc76
set $BLUE #78dce8
set $PURPLE #ab9df2

font pango:Tamzen Regular 10

floating_modifier $mod

# i3 startup things:
exec xrandr --output DVI-D-0 --auto --pos 0x0 --output DVI-I-0 --auto --pos 1920x400

exec --no-startup-id /usr/bin/gnome-settings-daemon
exec --no-startup-id feh --bg-fill ~/.i3/wallpaper.*
exec --no-startup-id setxkbmap us

# lock
bindsym Mod4+l exec ~/.i3/lock.sh

# start a terminal
bindsym $mod+Return exec gnome-terminal

# kill focused window
bindsym $mod+q kill

# start rofi:
bindsym $mod+w exec rofi -show window
bindsym $mod+d exec rofi -show run
bindsym $mod+s exec rofi -show ssh

# screenshots:
bindsym $mod+Shift+s exec gnome-screenshot -a 

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left move workspace to output left
bindsym $mod+Down move workspace to output down
bindsym $mod+Up move workspace to output up
bindsym $mod+Right move workspace to output right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split
bindsym $mod+c split h
bindsym $mod+v split v

# fullscreen mode
bindsym $mod+f fullscreen

# container layout
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# Jump to urgent windows
bindsym $mod+x [urgent=latest] focus

# customize workspace names
set $WS1 1 bench
set $WS2 2 runners
set $WS3 3 results
set $WS4 4 research
set $WS5 5 testbed
set $WS6 6 comms
set $WS7 7
set $WS8 8
set $WS9 9
set $WS0 0

assign [class="Slack"] $WS6
assign [class="Thunderbird"] $WS6

# switch to workspace
bindsym Mod4+1 workspace $WS1
bindsym Mod4+2 workspace $WS2
bindsym Mod4+3 workspace $WS3
bindsym Mod4+4 workspace $WS4
bindsym Mod4+5 workspace $WS5
bindsym Mod4+6 workspace $WS6
bindsym Mod4+7 workspace $WS7
bindsym Mod4+8 workspace $WS8
bindsym Mod4+9 workspace $WS9
bindsym Mod4+0 workspace $WS0

# move focused container to workspace
bindsym Mod4+Shift+1 move container to workspace $WS1
bindsym Mod4+Shift+2 move container to workspace $WS2
bindsym Mod4+Shift+3 move container to workspace $WS3
bindsym Mod4+Shift+4 move container to workspace $WS4
bindsym Mod4+Shift+5 move container to workspace $WS5
bindsym Mod4+Shift+6 move container to workspace $WS6
bindsym Mod4+Shift+7 move container to workspace $WS7
bindsym Mod4+Shift+8 move container to workspace $WS8
bindsym Mod4+Shift+9 move container to workspace $WS9
bindsym Mod4+Shift+0 move container to workspace $WS0

# border / titlebar
new_window normal 1 px
bindsym Control+Shift+x [class="^.*"] border toggle
for_window [class="^.*"] border pixel 2

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"

mode "resize" {
	bindsym h resize shrink width 5 px or 5 ppt
	bindsym k resize grow height 5 px or 5 ppt
	bindsym j resize shrink height 5 px or 5 ppt
	bindsym l resize grow width 5 px or 5 ppt
	bindsym Right resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Left resize grow width 5 px or 5 ppt
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bar {
  status_command ~/.i3/myI3Status.sh 
	position top
	font pango:Tamzen Regular 12px
  colors {
    separator $BACKGROUND
    background $BACKGROUND
    statusline $WHITE
    focused_workspace $GREEN $GREEN $BACKGROUND
    active_workspace $GREEN $BACKGROUND $GREEN
    inactive_workspace $BLUE $BACKGROUND $BLUE
    urgent_workspace $ORANGE $ORANGE $BACKGROUND
  }
}

# switching between workspace
bindsym $mod+period workspace next
bindsym $mod+comma workspace prev

# Media Keys:
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 0 set Master 5%-
bindsym XF86AudioNext exec mpc next  
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 0 set Master 5%+
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

# class                 border      background  text        indicator   child_border

client.focused          $GREEN      $GREEN      $BACKGROUND $BACKGROUND $GREEN
client.focused_inactive $GREEN      $BACKGROUND $GREEN      $GREEN      $BLUE
client.unfocused        $BACKGROUND $BACKGROUND $RED        $RED        $RED
client.urgent           $RED        $RED        $BACKGROUND $RED        $PURPLE
client.placeholder      #000000     #0c0c0c #ffffff         #000000     #0c0c0c
client.background       $BACKGROUND
